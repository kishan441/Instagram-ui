                        app:srcCompat="@drawable/post8" />

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="100dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/post9" />


                    <ImageView
                        android:id="@+id/imageView14"
